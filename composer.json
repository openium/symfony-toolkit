{
    "name": "openium/symfony-toolkit",
    "description": "Openium Web Toolkit for Symfony Project",
    "keywords": [
        "symfony",
        "bundle",
        "toolkit",
        "api",
        "openium"
    ],
    "type": "symfony-bundle",
    "license": "MIT",
    "homepage" : "https://www.openium.fr",
    "authors": [
        {
            "name": "Thomas Leduc",
            "email": "thomaslmoi15@hotmail.fr"
        },
        {
            "name": "Alexandre Caillot (Shiroe_sama)",
            "email": "a.caillot@openium.fr"
        }
    ],
    "autoload": {
        "psr-4": {
            "Openium\\SymfonyToolKitBundle\\": ""
        },
        "exclude-from-classmap": [
            "Tests/"
        ]
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "symfony/http-foundation": "^6.0",
        "doctrine/orm": "^2.6",
        "symfony/validator": "^6.0",
        "symfony/http-kernel": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/config": "^6.0",
        "symfony/framework-bundle": "^6.0",
        "symfony/monolog-bridge": "^6.0",
        "symfony/event-dispatcher": "^6.0",
        "symfony/translation": "^6.0",
        "symfony/monolog-bundle": "^3.2",
        "symfony/security-core": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/filesystem": "^6.0",
        "symfony/console": "^6.0",
        "symfony/security-http": "^6.0",
        "symfony/orm-pack": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "symfony/phpunit-bridge": "^6.0",
        "symfony/cache": "^6.0",
        "phpstan/phpstan": "^1.9",
        "symfony/error-handler": "^6.0",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan-phpunit": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.4",
        "rector/rector": "^0.16.0"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^6.0"
        },
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
